<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />


    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/vegetable"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/carrot" />

        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/fish"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fish" />

        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/laptop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/laptop" />

        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/mobile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/smartphone" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="45dp">

        <ImageView
            android:layout_margin="20dp"
            android:id="@+id/fruit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/apple"
            />
    </LinearLayout>

</RelativeLayout>